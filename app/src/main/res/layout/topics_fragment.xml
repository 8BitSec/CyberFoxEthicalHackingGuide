<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#DA070707">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/topic1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/tv_bg"
            android:textStyle="bold"
            android:text="Ethical Hacking - Terminologies"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="26sp"
            android:onClick="load_topic"/>

        <TextView
            android:id="@+id/topic2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="Ethical Hacking - Tools"
            android:textSize="26sp"
            android:background="@color/tv_bg"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:onClick="load_topic"/>

        <TextView
            android:id="@+id/topic3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/tv_bg"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="Ethical Hacking - Skills"
            android:textSize="26sp"
            android:onClick="load_topic"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/topic4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/tv_bg"
            android:textStyle="bold"
            android:onClick="load_topic"
            android:layout_marginTop="20dp"
            android:text="Ethical Hacking - Process"
            android:textSize="26sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/topic5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:onClick="load_topic"
            android:background="@color/tv_bg"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="Reconnaissance"
            android:textSize="26sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    </LinearLayout>
</ScrollView>